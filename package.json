{
  "name": "jobber-notifications",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "pm2 start ./build/src/app.js -i 5 --attach --watch",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts",
    "lint": "eslint \"src/**/*.{ts,json}\" --ext .ts,.json",
    "lint:fix": "eslint \"src/**/*.{ts,json}\" --ext .ts,.json --fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,mjs}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,mjs}\"",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.8",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.5",
    "@types/shelljs": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
