    "@tonytore/jobber-shared": "^0.0.19",
    "amqplib": "^0.10.9",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "email-templates": "^13.0.1",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^7.0.12",
    "shelljs": "^0.10.0",
    "winston": "^3.19.0"
  }
